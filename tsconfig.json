{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "ESNext",
        "allowJs": true,
        "outDir": "dist",
        "moduleResolution": "Node",
        "allowUmdGlobalAccess": true,
        "declaration": true,
        "types": ["node"],
        "esModuleInterop": true,

        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "files": ["src/index.ts", "src/typing.ts"]
}
